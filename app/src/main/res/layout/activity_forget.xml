<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <EditText
            android:layout_width="333dp"
            android:layout_height="63dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"

            android:hint="请输入你的电子邮箱"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>
    <Button
            android:text="找回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgotPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            android:layout_marginBottom="342dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="333dp"
            android:layout_height="65dp"
            android:inputType="textPassword"
            android:hint="请输入你新的密码"
            android:ems="10"
            android:id="@+id/newpassword"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/email"/>
</androidx.constraintlayout.widget.ConstraintLayout>